#include <stdio.h>

int main() 
{
    int mat[4][4],x,c,i,j;
    
    
   printf("mat[4][4]=\n");
  c=1;
  for(i=0;i<4;i++){
  for(j=0;j<4;j++){
 mat[i][j]=c; 
 c++;}
 }
 

 printf("\n");
 for(i=0;i<4;i++){
 for(j=0;j<4;j++){
 printf("%d \t",mat[i][j]);
 }printf ("\n");
 }

 printf("\n");
    
 for (int i = 0; i < 4;i++) 
 {
    for (int j = i + 1; j < 4; j++)
    {
            x = mat[i][j];
            mat[i][j] = mat[j][i];
            mat[j][i] = x;
    }
 }   
 printf("nouveau mat est\n");
 for (int i = 0; i< 4; i++){
 for (int j= 0; j < 4; j++) 
        printf("%d ", mat[i][j]);
        
        printf("\n");
 }

 return 0;
}
