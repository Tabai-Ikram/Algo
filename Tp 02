#include <stdio.h>
#include <string.h>
#include <stdlib.h>

char *ChargerChaine(int N) {
    char *chaine = (char *)malloc(N * sizeof(char));
    if (chaine == NULL) {
        printf("Erreur d'allocation mémoire.\n");
        exit(1);
    }
    printf("saisi la chaine qui son longeur <=%d\n",N-1);
    scanf(" %[^\n]", chaine);  
    return chaine;
}

int Longueur(char *ch) {
    int i = 0;
    while (ch[i] != '\0') 
    i++;
    return i;
}

void ChargerTab(char *p, char Tab[]) {
    int i = 0;
    while (*p != '\0') {
        Tab[i++] = *p;
        p++;
    }
    Tab[i] = '\0';        // إاضافة nullفي اخر الجدول
}
void InverserTab(char Tab[], char T[], int m) 
{int i;
    for (i = 0; i < m; i++) {
        T[i] = Tab[m - i - 1];
    }
    T[m] = '\0';            //اضافة null في النهاية
}

void AfficherTab(char Tab[], int m) {
    printf("Tableau: %s\n", Tab);
}

int main() {
    char *ch;
    int n,m;

    printf("Veuillez saisir la taille maximale de la chaîne:\n");
    scanf("%d", &n);

    ch = ChargerChaine(n);
    m = Longueur(ch);
    if(n>m){
    char Tab[m + 1], T[m + 1];  // +1من اجل ال NULL
    ChargerTab(ch, Tab);
    AfficherTab(Tab, m);

    InverserTab(Tab, T, m);
    AfficherTab(T, m);

    free(ch);  
    }
    else
    printf("error, il faut  la taille de la chaine <%d\n",n);
    return 0;
}
