#include<stdio.h>
int main() 
 {
   int i, j;
   char mat[5][5]=
   {
          {'1' ,'2' ,'3' ,'4' ,'5'},
         {'7' ,'a' ,'c' ,'8' ,'d'},
         {'c' ,'9' ,'4' ,'z', '8'},
         {'5' ,'6' ,'p' ,'n' ,'3'},
         {'2' ,'9' ,'t' ,'m' ,'k'}
   };
   
   for(i=0; i<5; i++) 
    {
    for(j=0; j<5; j++) {
    printf("%c \t", mat[i][j]);
    } 
    printf("\n");  
   }  
   
   printf(" les lignes pair sont=\n");
  for(i=0; i<5; i++) 
  {
    for(j=0; j<5; j++) {
     if(i%2==0)
       printf("%c \t", mat[i][j]);
    
     } 
    printf("\n");  
  }   
  
  
  printf(" les lignes impair sont=\n");
  for(i=0; i<5; i++) 
  {
    for(j=0; j<5; j++) {
     if(i%2 !=0)
       printf("%c \t", mat[i][j]);
    
     } 
    printf("\n");  
  }   
   
  printf(" la 1er diagonale= \n ");
  for(i=0 ;i<5 ;i++)
  printf("%c \t",mat[i][i]);
   
  printf(" la 2eme  diagonale= \n ");
  for(i=0 ; i<5 ;i++)
  for(j=0;j<5;j++)
  if(j+i==4)
  printf("%c \t", mat[i][j]);
  
  
  return 0;
 } 
